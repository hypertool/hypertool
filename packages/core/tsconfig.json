{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": ["es2016", "dom"],
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "rootDir": "source",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["source"]
}
