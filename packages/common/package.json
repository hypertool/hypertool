{
    "name": "@hypertool/common",
    "version": "0.2.0",
    "license": "MIT",
    "repository": "https://github.com/hypertool/hypertool",
    "private": false,
    "main": "./dist/index.js",
    "files": [
        "dist/**/*",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "watch": "yarn clean && tsc --project tsconfig.json -w",
        "build": "yarn clean && tsc --project tsconfig.json",
        "start": "node ./dist/source/index.js",
        "local": "yarn build && npm link",
        "push": "yarn build && yarn publish --access public",
        "test": "mocha --config .mocharc.json ./test",
        "test:watch": "mocha --config .mocharc.json --watch ./test"
    },
    "dependencies": {
        "apollo-server-errors": "^3.3.1",
        "iso-language-codes": "^1.1.0"
    },
    "peerDependencies": {
        "mongoose": "^6.1.7"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.11",
        "chai": "^4.3.4",
        "mocha": "^9.1.4",
        "mongodb-memory-server": "^8.2.0",
        "mongoose": "^6.1.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    }
}
